{{ define "index.tmpl" }}
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{ if .News }}
            {{ range .News }}
            <tr>
                <td>{{ .Title }}</td>
                <td>
                    <span class="badge bg-{{ if eq .Status "Processed" }}success{{ else if eq .Status "Published" }}primary{{ else }}secondary{{ end }}">
                        {{ .Status }}
                    </span>
                </td>
                <td>
                    <a href="/news/edit/{{ .ID }}" class="btn btn-sm btn-warning">Edit</a>
                    {{ if eq .Status "Processed" }}
                    <form action="/news/publish/{{ .ID }}" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-primary">Publish</button>
                    </form>
                    {{ else }}
                    <button class="btn btn-sm btn-secondary" disabled>Publish</button>
                    {{ end }}
                    <form action="/news/delete/{{ .ID }}" method="POST" style="display:inline;" onsubmit="return confirmDelete();">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {{ end }}
        {{ else }}
        <tr>
            <td colspan="3" class="text-center">No news available</td>
        </tr>
        {{ end }}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        {{ if .HasPreviousPage }}
        <li class="page-item">
            <a class="page-link" href="/?page={{ .PreviousPage }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {{ end }}
        <li class="page-item active"><a class="page-link" href="#">{{ .CurrentPage }}</a></li>
        {{ if .HasNextPage }}
        <li class="page-item">
            <a class="page-link" href="/?page={{ .NextPage }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        {{ end }}
    </ul>
</nav>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this news item?');
    }
</script>
{{ end }}
